{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension" :[1, {"extensions" : [".js", ".jsx"]}],
        "linebreak-style": ["error", "windows"],
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": ["error",{
            "html": "ignore",
            "custom": "ignore",
            "exceptions": [""]
        }],
        "react/react-in-jsx-scope" : "off"
    }
}
